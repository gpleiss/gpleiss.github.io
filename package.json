{
  "name": "geoffpleiss.com",
  "author": "Geoff Pleiss <gpleiss@gmail.com>",
  "homepage": "http://geoffpleiss.com/",
  "version": "0.1.0",
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-brands": "^5.0.13",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/react-fontawesome": "0.0.17",
    "bootstrap": "^4.4.1",
    "highlight.js": "^9.18.1",
    "katex": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-popper": "^0.8.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^3.4.0",
    "react-snapshot": "^1.3.0",
    "react-transition-group": "^1.2.1",
    "reactstrap": "^5.0.0",
    "sass": "^1.55.0"
  },
  "engines": {
    "node": ">18.0"
  },
  "scripts": {
    "build-css": "sass -I ./src -I ./node_modules src/:src/",
    "watch-css": "npm run build-css && sass -I ./src -I ./node_modules src/:src/ --watch",
    "start-js": "react-scripts --openssl-legacy-provider start",
    "build-js": "react-scripts --openssl-legacy-provider build",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "postbuild": "react-snapshot && tidy -m -indent --indent-spaces 2 -w 160 build/*.html build/**/*.html build/**/**/*.html ; echo 0",
    "predeploy": "npm run build",
    "deploy": "gh-pages -b master -d build",
    "stage": "npm run build && cd build && mv index.html home.html && echo '<?php include_once(\"home.html\"); ?>' > index.php && echo '{}' > composer.json && git init && git add . && git ci -m Stuff && git remote add heroku https://git.heroku.com/geoffpleiss.git && git push heroku master -f; cd -",
    "test": "react-scripts test --openssl-legacy-provider --env=jsdom",
    "eject": "react-scripts eject"
  },
  "reactSnapshot": {
    "snapshotDelay": 300,
    "minifyHtml": {
      "collapseWhitespace": false,
      "removeComments": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^1.2.0"
  }
}
